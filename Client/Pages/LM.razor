                <th scope="col">Bilans</th>
                <th scope="col"><b>Punkty</b></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in tabela)
            {
                if (t.miejsce < 3)
                {
                    <tr>
                        <td bgcolor="blue">@t.miejsce</td>
                        <td bgcolor="blue">@t.druzyna</td>
                        <td bgcolor="blue">@t.mecze</td>
                        <td bgcolor="blue">@t.zwyciestwo</td>
                        <td bgcolor="blue">@t.remis</td>
                        <td bgcolor="blue">@t.porazka</td>
                        <td bgcolor="blue">@t.gz</td>
                        <td bgcolor="blue">@t.gs</td>
                        <td bgcolor="blue">@t.bilans</td>
                        <th bgcolor="blue">@t.punkty</th>
                    </tr>
                }
                else if (t.miejsce == 3)
                {
                    <tr>
                        <td bgcolor="orange">@t.miejsce</td>
                        <td bgcolor="orange">@t.druzyna</td>
                        <td bgcolor="orange">@t.mecze</td>
                        <td bgcolor="orange">@t.zwyciestwo</td>
                        <td bgcolor="orange">@t.remis</td>
                        <td bgcolor="orange">@t.porazka</td>
                        <td bgcolor="orange">@t.gz</td>
                        <td bgcolor="orange">@t.gs</td>
                        <td bgcolor="orange">@t.bilans</td>
                        <th bgcolor="orange">@t.punkty</th>
                    </tr>
                }
                else
                {
                    <tr>
                        <td>@t.miejsce</td>
                        <td>@t.druzyna</td>
                        <td>@t.mecze</td>
                        <td>@t.zwyciestwo</td>
                        <td>@t.remis</td>
                        <td>@t.porazka</td>
                        <td>@t.gz</td>
                        <td>@t.gs</td>
                        <td>@t.bilans</td>
                        <th>@t.punkty</th>
                    </tr>
                }
            }
        </tbody>
    </table>
