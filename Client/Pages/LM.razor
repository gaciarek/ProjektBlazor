<div class="mt-5">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Pozycja</th>
                <th scope="col">Drużyna</th>
                <th scope="col">Mecze</th>
                <th scope="col">Zwycięstwa</th>
                <th scope="col">Remisy</th>
